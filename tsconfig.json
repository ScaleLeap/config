{
  "extends": "tsconfigs/node",
  "compilerOptions": {
    "pretty": true,
    "incremental": true,
    "strict": true,
    "outDir": "./dst",
    "rootDir": "./src",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@types/jest"
    ]
  },
  "include": [
    "src/*.ts",
    "src/package.json",
    "src/package-lock.json",
  ],
  "exclude": [
    "src/*.test.ts"
  ]
}
